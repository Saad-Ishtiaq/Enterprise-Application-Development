<Window x:Class="Lecture27.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lecture27"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label HorizontalContentAlignment="Center"  Content="Name: " Background="#FF95ECCC" Height="30" Width="100" ></Label>
            <TextBox Name="UserName" Background="#FFBDBDBD" Width="189" Height="30" Margin="20,0,20,0"></TextBox>
            <Button Content="Save" Background="#FF7EAABF" Height="30" Width="40" Click="Button_Click"/>


        </StackPanel>
    </Grid>
</Window>
